<?xml version="1.0" encoding="UTF-8"?>
<included>


	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${jboss.server.log.dir}/MobileTaskApp/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${jboss.server.log.dir}/MobileTaskApp/%d{yyyyMM,aux}/%d{yyyy-MM-dd}_app.log</fileNamePattern>
            <maxHistory>500</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{48} - %msg%n</pattern>
        </encoder>
    </appender>

	<!--<logger name="org.hibernate" level="debug"/> -->
    <logger name="org.springframework" level="WARN"> 
    	<appender-ref ref="FILE" />
    </logger>
    
    <logger name="cat.shot" level="DEBUG">
    	<appender-ref ref="FILE" />
    </logger> 
    
    <logger name="oracle.jdbc" level="DEBUG"> 
    	<appender-ref ref="FILE" />
    </logger>
    
    <logger name="org.postgresql" level="warn"
		additivity="true">
		<appender-ref ref="FILE" />
	</logger>
	
	<logger name="org.hibernate" level="WARN"
		additivity="true">
		<appender-ref ref="FILE" />
	</logger>
	
	
	<logger name="org.apache" level="error"
		additivity="true">
		<appender-ref ref="FILE" />
	</logger>
	
	<logger name="com.fasterxml" level="error"
		additivity="true">
		<appender-ref ref="FILE" />
	</logger>
	
	<logger name="org.jboss" level="ERROR"
		additivity="true">
		<appender-ref ref="FILE" />
	</logger>
    
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>

</included>